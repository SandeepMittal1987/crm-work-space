{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "crm": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "standalone": false
        },
        "@schematics/angular:directive": {
          "standalone": false
        },
        "@schematics/angular:pipe": {
          "standalone": false
        }
      },
      "root": "projects/crm",
      "sourceRoot": "projects/crm/src",
      "prefix": "crm",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/crm",
            "index": "projects/crm/src/index.html",
            "browser": "projects/crm/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/crm/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/crm/src/favicon.ico",
              "projects/crm/src/assets"
            ],
            "styles": [
              "./node_modules/ngx-spinner/animations/ball-scale-multiple.css",
              "node_modules/@fortawesome/fontawesome-free/css/all.css",
              "@angular/material/prebuilt-themes/deeppurple-amber.css",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "projects/crm/src/styles.scss"
            ],
            "scripts": [
              "node_modules/bootstrap/dist/js/bootstrap.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "crm:build:production"
            },
            "development": {
              "buildTarget": "crm:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "crm:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/crm/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/crm/src/favicon.ico",
              "projects/crm/src/assets"
            ],
            "styles": [
              "@angular/material/prebuilt-themes/deeppurple-amber.css",
              "projects/crm/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "core-kit": {
      "projectType": "library",
      "root": "projects/core-kit",
      "sourceRoot": "projects/core-kit/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/core-kit/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/core-kit/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/core-kit/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/core-kit/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
    
  }
}
